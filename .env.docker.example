# Banco (container postgres)
POSTGRES_DB=bwaproj_db
POSTGRES_USER=bwaproj
POSTGRES_PASSWORD=bwaproj_secret

# Django
SECRET_KEY=altere-em-producao-uma-chave-longa-e-aleatoria
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

